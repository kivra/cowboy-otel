{deps, [
    {cowboy, "2.12.0"},
    {opentelemetry, "1.5.0"},
    {opentelemetry_api, "1.4.0"}
]}.

{profiles, [
    {test, [
        {erl_opts, [nowarn_export_all]},
        {deps, []}
    ]}
]}.

{dialyzer, [
    {plt_extra_apps, [
        ranch, cowlib
    ]}
]}.

{project_plugins, [
    rebar3_hex,
    rebar3_ex_doc,
    {erlfmt, "1.3.0"}
]}.

{ex_doc, [
    {source_url, <<"https://github.com/kivra/cowboy-otel">>},
    {extras, [<<"README.md">>, <<"LICENSE">>]},
    {main, <<"readme">>}
]}.

{hex, [{doc, ex_doc}]}.

{erlfmt, [
    write,
    {files, [
        "rebar.config",
        "src/**/*.{erl,app.src}"
    ]}
]}.
